@page
@model movietheatre.Pages.checkout.checkoutModel

@{
    double total = 0;
}

<h1>Checkout</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart) if (item.customer.email == User.Identity.Name)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.customer.fname)
                    </td>
                    <td>
                        @{
                            @Html.DisplayFor(modelItem => item.product.name)
                            total += item.quantity * item.product.price;
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.quantity)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>

<form action="../OrderHeaders/Create/" method="post">

    <h2>Payment Information</h2>
    <hr />

    <div class="form-group">
        <label asp-for="OrderHeader.address">Address</label>
        <input asp-for="OrderHeader.address" />
        <span asp-validation-for="OrderHeader.address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderHeader.city">City</label>
        <input asp-for="OrderHeader.city" />
        <span asp-validation-for="OrderHeader.city" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderHeader.state">State</label>
        <input asp-for="OrderHeader.state" />
        <span asp-validation-for="OrderHeader.state" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderHeader.cardnumber">Card Number</label>
        <input asp-for="OrderHeader.cardnumber" />
        <span asp-validation-for="OrderHeader.cardnumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Order & Pay</button>

</form>

<a href="../OrderHeaders">Order Header</a>

<br />

<p>Total:&nbsp;$@String.Format("{0:0.00}", total)</p>