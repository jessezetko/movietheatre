@page
@model movietheatre.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<style>
    .card-columns {
       
        text-align: center;
       overflow: hidden;
       
    }

 


  .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }



   .card button:hover {
           opacity: 0.7;
    }

   .description{
       font-size:12px;
       text-decoration:wavy;
   }


</style>

<div>
    <div class="card-columns">
        @foreach (var item in Model.Product)
        {
            <img src="@item.image" style="width:100%" width="100" height="350">


            var itemprice = "$" + String.Format("{0:0.00}", item.price);
            <h1 class="price"> @Html.DisplayFor(modelItem => item.name) - @Html.DisplayFor(modelItem => itemprice) </h1>


            <a asp-page="/checkout/create" asp-route-itemid="@item.ID">Add to Cart</a>
            <br /><br />
        }
    </div>
</div>