@page
@model movietheatre.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<style>
    .card-columns {
       
        text-align: center;
       
       
    }

 


        .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }



        .card button:hover {
            opacity: 0.7;
        }


</style>

<div>
    <div class="card-columns">
                @foreach (var item in Model.Product)
                {
                    <img src="~/Product/@item.image" style="width:100%" width="100" height="350">


                        <td>
                            <h1> @Html.DisplayFor(modelItem => item.name)</h1>

                        </td>
                        <td>
                            <p>
                                @Html.DisplayFor(modelItem => item.description)
                            </p>
                        </td>
                        <td>
                            @{
                                var itemprice = "$" + String.Format("{0:0.00}", item.price);
                                <p class="price">@Html.DisplayFor(modelItem => itemprice) </p>
                            }
                        </td>
                        <td>
                            <a asp-page="/checkout/create" asp-route-itemid="@item.ID">Add to Cart</a>
                        </td>
                    
                }
            </div>