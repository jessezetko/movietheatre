@page
@model movietheatre.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Order Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderHeader.date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderHeader.date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderHeader.customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderHeader.customer.fname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderHeader.address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderHeader.address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderHeader.city)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderHeader.city)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderHeader.state)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderHeader.state)
        </dd>
    </dl>

    <table class="table" >


        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderHeader.orderDetails[0].description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderHeader.orderDetails[0].total)
                </th>

                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model.OrderHeader.orderDetails)
        {
            <tbody>

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.total)
                    </td>
                </tr>

            </tbody>
        }
    </table>

    </div>

